<h1 class="text-center"><%= pluralize(@posts.count, "Result")%></h1>
<%= render 'search/form' %>

<div class="container">
    <table class="table table-dark table-striped">
        <thead>
        <tr>
            <th><%= sort_link(@query, :title, "Title", default_oder: :asc)%></th>
            <th><%= sort_link(@query, :body, "Blog content")%></th>
            <th><%= sort_link(@query, :user_name, "Users")%></th>
            <th></th>
        </tr>
        </thead>

        <tbody>            
            <% @posts.each do |post| %>
            <tr>
                <td><%= link_to post.title, post %></td>
                <td><%= post.body.truncate_words(10) %></td>                
                <td><%= link_to post.user.name, post.user %></td>                
            </tr>
            <% end %>           
        </tbody>
    </table>
</div>